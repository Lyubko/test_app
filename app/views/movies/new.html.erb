<!-- Validation failure messages -->
<% if @movie.errors.any? %>
  <% @movie.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Movie</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_movie" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for movie_name -->
      <div class="form-group">
        <label for="movie_name" class="control-label">
          Movie name
        </label>

        <input type="text" id="movie_name" name="movie_name" placeholder="Movie name" class="form-control" value="<%= @movie.movie_name %>">
      </div>

      <button class="btn btn-success">
        Create Movie
      </button>
      or
      <a href="/movies">Cancel</a>
    </form>
  </div>
</div>
