<div class="page-header">
  <h3>Cast #<%= @cast.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Movie</dt>
      <dd>
        <% if @cast.movie.present? %>
          <a href="/movies/<%= @cast.movie_id %>">
            <%= @cast.movie.movie_name %>
          </a>
        <% end %>
      </dd>

      <dt>Actor</dt>
      <dd>
        <% if @cast.actor.present? %>
          <a href="/actors/<%= @cast.actor_id %>">
            <%= @cast.actor.created_at %>
          </a>
        <% end %>
      </dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/casts" class="btn btn-primary">
        Back
      </a>
      <a href="/casts/<%= @cast.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_cast/<%= @cast.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
