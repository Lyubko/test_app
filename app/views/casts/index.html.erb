<div class="page-header">
  <h1>
    Casts
    <a href="/casts/new" class="btn btn-lg btn-success">New Cast</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "casts_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :movie_movie_name_cont, "Movie movie_name contains" %>
      <%= f.text_field :movie_movie_name_cont, :class => "form-control", :placeholder => "Movie movie_name contains" %>
    </div>

<div class="form-group">
          <%= f.label :created_at, "Actor Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='actorgteqcreated_atPicker'>
                  <%= f.text_field :actor_created_at_gteq, :class => "form-control", :placeholder => "Actor Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='actorlteqcreated_atPicker'>
                  <%= f.text_field :actor_created_at_lteq, :class => "form-control", :placeholder => "Actor Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#actorgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#actorlteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#actorgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#actorlteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#actorlteqcreated_atPicker').on("dp.change", function (e) {
                  $('#actorgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/casts" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#casts_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Movie</th>
        <th>Actor</th>
        <th>Actions</th>
      </tr>

      <% @casts.each do |cast| %>
      <tr>
        <td>
          <% if cast.movie.present? %>
            <a href="/movies/<%= cast.movie.id %>">
              <%= cast.movie.movie_name %>
            </a>
          <% end %>
        </td>
        <td>
          <% if cast.actor.present? %>
            <a href="/actors/<%= cast.actor.id %>">
              <%= cast.actor.created_at %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/casts/<%= cast.id %>" class="btn btn-primary">Show</a>
          <a href="/casts/<%= cast.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cast/<%= cast.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @casts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
