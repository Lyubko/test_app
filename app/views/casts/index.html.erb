<div class="page-header">
  <h1>
    Casts
    <a href="/casts/new" class="btn btn-lg btn-success">New Cast</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Movie</th>
        <th>Actor</th>
        <th>Actions</th>
      </tr>

      <% @casts.each do |cast| %>
      <tr>
        <td><%= cast.movie.movie_name %></td>
        <td><%= cast.actor.created_at %></td>
        <td>
          <a href="/casts/<%= cast.id %>" class="btn btn-primary">Show</a>
          <a href="/casts/<%= cast.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_cast/<%= cast.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
